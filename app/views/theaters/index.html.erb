<P><%= @user.name %></P>
<P><%= @user.kana_name %></P>
  <tr><%= image_tag @user.get_profile_image, size:'100x100' %></tr>
<%= link_to "編集",edit_user_path(@user.id) %>
<p><%= @user.introduction %></p>







<h1>映画投稿</h1>
    <%= form_with model:@theater, local:true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
    <%= f.label :introduction %>
    <%= f.text_field :introduction %>
    <%= f.submit %>
    <% end %>

<h1>映画投稿一覧</h1>
<% render 'layouts/errors', obj:@theater %>
  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>ジャンル</th>
      <th>紹介文</th>
    </tr>
  </thead>
  <tbody>
    <% @theaters.each do |theater| %>
      <tr>
        <td><%= theater.title %></td>
        <th><%= @genres.find(theater.genre_id).name %></th>
        <td><%= theater.introduction %></td>
        <td class=<%= "favorite-" + theater.id.to_s %> >
            <%= render "favorites/btn", theater: theater %>
        </td>
        <td><%= render "theater_comments/counter", theater: theater %></td>
      </tr>
    <% end %>
  </tbody>
</table>