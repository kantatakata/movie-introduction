<h1></h1>
<p></p>
      <%= form_with model: @theater, url: theater_path, method: :patch do |f| %>
      <div class="field row mb-5">
      <%= f.label :title, "映画名",class: "col-2" %>
      <%= f.text_field :title,class: "col-3"%>
      <div class="col-1">
      </div>
      <%= f.label :genre_id, "ジャンル" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt:  Genre.find(@theater.genre_id).name %>

      <%= f.label :introduction, "映画紹介文",class: "col-2" %>
      <%= f.text_field :introduction,class: "col-3"%>

      <%= f.submit '変更を保存', class: "col-2 p-2 btn btn-success" %>
      </div>
      <% end %>
 </div>
