<div class="container">
  <%= render 'layouts/errors', obj: @genre %>
  <div class="row">
    <div class="col-8">
      <h5 class="d-flex justify-content-left mb-5 bg-light p-2 text-black ">ジャンル編集</h5>

      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <div class="field row mb-5">
        <%= f.label :name, "ジャンル名",class: "col-3" %>
        <%= f.text_field :name,class: "col-4"%>
        <div class="col-2">
        </div>
        <%= f.submit '変更を保存', class: "col-2 p-2 btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>

