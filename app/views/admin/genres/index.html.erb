<div class="container mt-4 mb-5">
  <%= render 'layouts/errors', obj: @genre %>
  <div class="row">
    <div class="col-10">
    <h5 class="mb-5 bg-light p-2">ジャンル一覧・追加</h5>
    <%= form_with model: @genre,url:admin_genres_path, method: :post do |f| %>
      <table class="mb-5">
        <th><%= f.label :name, "ジャンル名"%></th>
        <th class="col-1"></th>
        <th><%= f.text_field :name %></th>
        <th class="col-1"></th>
        <th><%= f.submit '新規登録', class: "btn btn-success" %></th>
      </table>
    <% end %>
    </div>
  </div>
  <div class="row">
    <div class='col-5'>
      <table class='table'>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
              <%= link_to edit_admin_genre_path(genre.id),class: 'nav-link text-light' do %>
              <button type="button" class="btn btn-success">編集する</button>
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>