<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
       <h4 class="d-flex justify-content-left mb-5 bg-light p-2 text-black "><%= @user.name%>さんの会員情報</h4>
  </div>

     <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @user.id %></td>
        <tr>
        <tr>
          <td>氏名</td>
          <td><%= @user.name%></td>
        <tr>
          <td>フリガナ</td>
          <td><%= @user.kana_name %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        <tr>
          <td>自己紹介文</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
          <% if @user.is_deleted? %>
            退会
          <% else %>
            有効
          <% end %>
          </td>
        </tr>
      </tbody>
     </table>

        <div class="field row mb-4">
          <div class="col-2"></div>
           <%= link_to "編集する", edit_admin_user_path(@user), class: "col-2 btn btn-success" %>
        </div>
</div>
