<div class="container mt-4">
  <div class="row">
    <div class="col-12">
       <h4 class="mb-5 bg-light p-2 text-black ">会員一覧</h4>
      <table class='table'>
        <thead class='thead-light'>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%=  link_to admin_user_path(user.id),class: 'nav-link' do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted? %>
                退会
              <% else %>
                有効
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
