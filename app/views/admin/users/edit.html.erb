<div class="container mt-4">
  <%= render 'layouts/errors', obj: @user %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h3 class="mb-4 text-center">会員情報</h3>
      <%= form_with model: @user, url: admin_user_path(@user.id), class: 'new_user', local: true do |f| %>
        <div class="form-group">
          <h5>
          <%= f.label :会員ID,class: "col-3"%>
          <%= @user.id %>（<%= @user.name %>）
          </h5>
        </div>
        <div class="form-group">
          <%= f.label :氏名 %>
          <%= f.text_field :name, class: "form-control name"%>
        </div>
        <div class="form-group">
          <%= f.label :フリガナ%>
          <%= f.text_field :kana_name, class: "form-control kana_name" %>
        </div>
        <div class="form-group">
          <%= f.label :メールアドレス%>
          <%= f.email_field :email, class: "form-control email" %>
        </div>
        <div class="form-group">
          <%= f.label :自己紹介文%>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
          <%= f.label :会員ステータス%>
          <%= f.radio_button :is_deleted, false , checked: true %>
          <%= f.label :有効,class: "col-2" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :退会,class: "col-2"  %>
        </div>
        <div class="form-group">
          <div class="col-2"></div>
          <%= f.submit "変更内容を保存" ,class: "btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>