<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
     <h4 class="d-flex justify-content-left mb-5 bg-light p-2 text-black "><%= @user.name %>さんの会員情報</h4>
  </div>

      <%= form_with model: @user, url: admin_user_path(@user.id), class: 'new_user', local: true do |f| %>
        <div class="field row mb-2">
          <%= f.label :会員ID,class: "col-2"%>
          <%= @user.id %>
        </div>
        <div class="field row mb-2">
          <%= f.label :氏名,class: "col-2"%>
          <%= f.text_field :name,  class: "col-3"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :フリガナ,class: "col-2"%>
          <%= f.text_field :kana_name, class: "col-3"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :メールアドレス,class: "col-2"%>
          <%= f.email_field :email, class: "col-3" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :自己紹介文,class: "col-2"%>
          <%= f.text_area :introduction, class: "col-3" %>
        </div>
        <div class="field row mb-2">
          <%= f.label :会員ステータス,class: "col-2"%>
          <%= f.radio_button :status, false , checked: true %>
          <%= f.label :有効,class: "col-1" %>

          <%= f.radio_button :status, true %>
          <%= f.label :退会,class: "col-1"  %>
        </div>
        <div class="field row mb-4">
          <div class="col-2"></div>
          <%= f.submit "変更内容を保存" ,class: "col-2 btn btn-sm btn-success" %>
        </div>
       <% end %>
  </div>