<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
      <h5 class="d-flex justify-content-left mb-5 bg-secondary p-2 text-black bg-opacity-10">ジャンル一覧・追加</h5>
  </div>
        <%= form_with model: @genre,url:genres_path do |f| %>
        <div class="field row mb-5">
        <%= f.label :name, "ジャンル名",class: "col-2" %>
        <%= f.text_field :name,class: "col-3"%>
        <div class="col-1">
        </div>
        <%= f.submit '新規登録', class: "col-1 btn btn-success" %>
        </div>
        <% end %>
    <div class='col-md-5'>
     <table class='table'>
      <thead>
        <tr>
         <th>ジャンル</th>
         <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
       <tr>
        <td><%= genre.name %></td>
        <td>
        <%= link_to edit_genre_path(genre.id),class: 'nav-link text-light' do %>
        <button type="button" class="btn btn-success">編集する</button>
        <% end %>
        </td>
       </tr>
        <% end %>
      </tbody>
     </table>
    </div>
  </div>