
  <!--検索対象モデルがUserの時 -->
  <% if @model == "User" %>
  <h3>Users search for "<%= @content %>"</h3>
  <h1>会員一覧</h1>
　<table class='table table-striped table-hover table-inverse'>
　  <thead>
  　  <tr>
      <th></th>
      <th>名前</th>
      <th>フリガナ</th>
      <th colspan="3"></th>
     </tr>
    </thead>
     <tbody>
      <% @users.each do |user| %>
       <tr>
        <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
        <td><%= user.name %></td>
        <td><%= user.kana_name %></td>
        <td><%= link_to "おすすめ作品",user_path(user.id) %></td>
       </tr>
      <% end %>
     </tbody>
  </table>
   <!--検索対象モデルがTheaterの時 -->
  <% elsif @model == "Theater" %>
  	<h3>Theaters search for "<%= @content %>"</h3>
   <h1>映画投稿一覧</h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>ジャンル</th>
         <th>紹介文</th>
        </tr>
      </thead>
     <tbody>
     <% @theaters.each do |theater| %>
        <tr>
         <td><%= theater.title %></td>
         <th><%= theater.genre.name %></th>
         <td><%= theater.introduction %></td>
         <td class=<%= "favorite-" + theater.id.to_s %> >
            <%= render "favorites/btn", theater: theater %>
         </td>
         <td><%= render "theater_comments/counter", theater: theater %></td>
        </tr>
     <% end %>
     </tbody>
    </table>
 <!--検索対象モデルがGenreの時 -->
  <% else %>
   <h1>映画投稿ジャンル一覧</h1>
   <table class='table table-striped table-hover table-inverse'>
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>ジャンル</th>
      <th>紹介文</th>
    </tr>
   </thead>
    <tbody>
     <% @genres.each do |genre| %>
        <tr>
         <td><%= genre.theaters.title %></td>
         <th><%= genre.name %></th>
         <td><%= genre.theaters.introduction %></td>
        <!-- <td class=<3%= "favorite-" + theater.id.to_s %> >-->
        <!--    <3%= render "favorites/btn", theater: theater %>-->
        <!-- </td>-->
        <!-- <td><3%= render "theater_comments/counter", theater: theater %></td>-->
        </tr>
     <% end %>
    </tbody>
   </table>
  <% end %>