<% if theater.favorited_by?(current_customer) %>
  <%= link_to theater_favorites_path(theater), method: :delete, remote: true do %>
  <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
  <%= theater.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to theater_favorites_path(theater), method: :post, remote: true do %>
  <i class="fas fa-heart" aria-hidden="true"></i>
  <%= theater.favorites.count %> いいね
  <% end %>
<% end %>
