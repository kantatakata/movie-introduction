<div class="container">
  <%= render 'layouts/errors', obj: @theater %>
  <div class="row">
    <div class="col-1">
    </div>
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>映画投稿編集</h1>

      <%= form_with model: @theater, url: theater_path, method: :patch do |f| %>
      <div class="form-group">
      <%= f.label :title, "映画名" %>
      <%= f.text_field :title,class: "form-control theater_title"%>
      </div>
      <div class="form-group">
      <%= f.label :genre_id, "ジャンル" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt:  Genre.find(@theater.genre_id).name,class: "form-control theeater_genre"%>
　　　</div>
　　　<div class="form-group">
      <%= f.label :introduction, "映画紹介文" %>
      <%= f.text_area :introduction,class: "form-control theater_introduction"%>
      </div>
      <div class="form-group">
      <%= f.submit '変更を保存', class: "col-3 p-2 btn btn-success" %>
      </div>
      <% end %>
      <%= link_to '映画投稿一覧へ', theaters_path, class: "映画投稿一覧へ" %>
  </div>
</div>
