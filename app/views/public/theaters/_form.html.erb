      <h4>映画投稿</h4>
      <%= form_with model:theater, local:true do |f| %>
      <div class="field mb-2">
      <%= f.label :title,"タイトル",class: "font-weight-bold" %><br>
      <%= f.text_field :title %>
      </div>
      <div class="field mb-2">
      <%= f.label :genre_id, "ジャンル",class: "font-weight-bold"  %><br>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
      </div>
      <div class="field mb-2">
      <%= f.label :introduction,"紹介文",class: "font-weight-bold"  %><br>
      <%= f.text_area :introduction %>
      </div>
      <div class="action mb-5">
      <%= f.submit %>
      </div>
      <% end %>
