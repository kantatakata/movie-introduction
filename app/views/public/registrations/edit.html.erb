<div class='container'>
  <%= render 'layouts/errors', obj: @user %>
  <div class='row'>
    <div class='col-12 text-center'>
      <section class="inner">
        <h2 class="section-ttl">パスワード編集</h2>
        <%= form_with model: @user, url: user_registration_path, id: 'edit_user', class: 'edit_user', local: true do |f| %>
          <div class="field mb-2">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field mb-2">
            <%= f.label :current_password, "現在のパスワード" %><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
          <div class="field mb-2">
            <%= f.label :password, "新しいパスワード(#{@minimum_password_length}文字以上)" %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field mb-4">
            <%= f.label :password_confirmation, "新しいパスワード(確認用)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions">
            <%= link_to "前のページに戻る", edit_user_path(@user.id), class: "btn btn-primary" %>
            <%= f.submit "パスワード更新", class: "btn btn-success" %>
          </div>
        <% end %>
      </section>
    </div>
  </div>
</div>
