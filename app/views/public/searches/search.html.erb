
  <!--検索対象モデルがUserの時 -->
  <% if @model == "User" %>
  <h3>Users search for "<%= @content %>"</h3>
  <%= render 'info', user: current_user %>

   <!--検索対象モデルがTheaterの時 -->
  <% elsif @model == "Theater" %>
  	<h3>Theaters search for "<%= @content %>"</h3>
   <h1>映画投稿一覧</h1>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
         <th></th>
         <th>Title</th>
         <th>ジャンル</th>
         <th>紹介文</th>
        </tr>
      </thead>
     <tbody>
     <% @theaters.each do |theater| %>
        <tr>
         <td><%= theater.title %></td>
         <th><%= theater.genre.name %></th>
         <td><%= theater.introduction %></td>
         <td class=<%= "favorite-" + theater.id.to_s %> >
            <%= render "favorites/btn", theater: theater %>
         </td>
         <td><%= render "theater_comments/counter", theater: theater %></td>
        </tr>
     <% end %>
     </tbody>
    </table>
 <!--検索対象モデルがGenreの時 -->
  <% else %>
   <h1>映画投稿ジャンル一覧</h1>
   <table class='table table-striped table-hover table-inverse'>
    <thead>
    <tr>
      <th>Title</th>
      <th>ジャンル</th>
      <th>紹介文</th>
    </tr>
   </thead>
    <tbody>

     <% @genres.each do |genre| %>
     　　<% genre.theaters.each do |theater|%>
          <tr>
           <td><%= theater.title%></td>
           <th><%= theater.genre.name %></th>
           <td><%= theater.introduction %></td>
          <td class=<%= "favorite-" + theater.id.to_s %>>
          <%= render "favorites/btn", theater: theater %>
          </td>
          <td><%= render "theater_comments/counter", theater: theater %></td>
          </tr>
        <% end %>
     <% end %>
    </tbody>
   </table>
  <% end %>