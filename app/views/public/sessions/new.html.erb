<div class="container">
  <div class="row">
    <div class="col-6">
      <section class="inner">
      <h2 class="section-ttl mb-4">ログイン</h2>
        <%= form_with model:@user, url: user_session_path do |f| %>
          <div class="field mb-2">
            <%= f.label :name,"名前",class: "font-weight-bold"%><br />
            <%= f.text_field :name, autofocus: true %>
          </div>
          <div class="field mb-2">
            <%= f.label :password,"パスワード",class: "font-weight-bold" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me,"パスワードを保存する" %>
            </div>
          <% end %>
          <div class="actions mb-5">
            <%= f.submit "ログイン", class: "btn btn-primary"%>
          </div>
        <% end %>
        <h2 class="section-ttl">登録がお済みでない方</h2>
        <p><%= link_to "こちら", new_user_registration_path, class: "underline  text-danger px-3" %>から新規登録を行なってください。</p>
      </section>
    </div>
  </div>
</div>

