<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-2'>
    <%= render 'info', user: current_user %>
    <%= render 'public/theaters/form', theater: @theater %>
    </div>


    <div class='col-md-9 offset-md-1'>
    <h3><%= @user.name %>さんのおすすめ作品</h3>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>タイトル</th>
            <th class="col-2">ジャンル</th>
            <th>紹介文</th>
            <th class="col-2"></th>
            <th class="col-2"></th>
          </tr>
        </thead>
        <tbody>
        <% @theaters.each do |theater| %>
          <tr>
            <td><%= theater.title %></td>
            <td><%= @genres.find(theater.genre_id).name %></td>
            <td><%= theater.introduction %></td>
            <td class=<%= "favorite-" + theater.id.to_s %> >
                <%= render "public/favorites/btn", theater: theater %>
            </td>
            <td><%= render "public/theater_comments/counter", theater: theater %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
