<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>会員編集</h2>
    <%= form_with model:@user, local:true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
     <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
      </div>
       <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autocomplete: "name", class: "form-control name" %>
      </div>
      <div class="field row mb-2">
        <%= f.label :フリガナ,class: "col-2"%>
        <%= f.text_field :kana_name, autocomplete: "kana_name", class: "col-3"%>
      </div>
      <div class="field row mb-2">
        <%= f.label :メールアドレス,class: "col-2"%>
        <%= f.email_field :email, autocomplete: "email", class: "col-3" %>
      </div>

      <div class="form-group">
        <%= f.label :introduction %>
        <%= f.text_area :introduction, class: "form-control introduction" %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
