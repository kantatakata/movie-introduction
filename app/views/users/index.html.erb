<P><%= @user.name %></P>
<P><%= @user.kana_name %></P>
<p><%= image_tag @user.get_profile_image, size:'100x100' %></p>

<%= link_to "編集",edit_user_path(@user.id) %>







<h1>映画投稿</h1>
    <%= form_with model:@theater, local:true do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :genre_id, "ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
    <%= f.label :introduction %>
    <%= f.text_field :introduction %>
    <%= f.submit %>
    <% end %>


<h1>会員一覧</h1>
  <table>
    <th>
    <% @users.each do |user| %>
      <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
      </th>
      <th>名前</th>
      <th><%= user.name %></th>
      <th>フリガナ</th><br>
      <th><%= user.kana_name %></th>
      <th><%= link_to "おすすめ作品",user_path(user.id) %></th>
    <% end %>
  </table>