<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <table class='table'>
        <tr>
          <td class='text-center font-weight-bold'><%= @user.name %></td>
        </tr>
        <tr>
          <td class='text-center font-weight-bold'><%= @user.kana_name %></td>
        </tr>
        <tr>
        <td><%= image_tag @user.get_profile_image, size:'100x100' %></td>
        <td class="text-center"><%= link_to "編集",edit_user_path(@user.id), class: 'btn btn-success'%></td>
        </tr>
      </table>






      <h4>映画投稿</h4>
      <%= form_with model:@theater, local:true do |f| %>
      <div class="field mb-2">
      <%= f.label :title,"タイトル",class: "font-weight-bold" %><br>
      <%= f.text_field :title %>
      </div>
      <div class="field mb-2">
      <%= f.label :genre_id, "ジャンル",class: "font-weight-bold"  %><br>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, prompt: "--選択してください--" %>
      </div>
      <div class="field mb-2">
      <%= f.label :introduction,"紹介文",class: "font-weight-bold"  %><br>
      <%= f.text_area :introduction %>
      </div>
      <div class="action mb-5">
      <%= f.submit %>
      </div>
      <% end %>
    </div>



    <div class='col-md-8 offset-md-1'>
      <h3>会員一覧</h3>
      <table class='table'>
        <thead>
          <tr>
            <th>image</th>
            <th>名前</th>
            <th>自己紹介文</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
            <td><%= user.name %></td>
            <td><%= user.introduction %></td>
            <td><%= link_to "おすすめ作品",user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
