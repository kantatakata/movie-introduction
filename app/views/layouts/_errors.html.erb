<% if obj.errors.any? %>
  <div id="error_explanation">
    <h3 class="text text-danger"><%= pluralize(obj.errors.count, "") %> 件のエラーが発生しました。ご確認ください。</h3>
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li class="text text-danger"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
